{
    "hediet.vscode-drawio.simpleLabels": true,
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build/latex/%DOCFILE%",
    "[latex]": {
        "editor.wordWrap": "on",
    },
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.rootFile.useSubFile": true,
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "TEXINPUTS": "%WORKSPACE_FOLDER%/latex/lib//;%WORKSPACE_FOLDER%/resources/imgs//;",
            }
        },
        {
          "name": "pandoc-html",
          "command": "pandoc",
          "args": [
            "%DOCFILE%.tex",
            "--from=latex",
            "--to=html5",
            "--output=%WORKSPACE_FOLDER%/build/html/%DOCFILE%.html",
            "--data-dir=%APPDATA%/pandoc",
            "--verbose",
            "--mathjax=http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML",
            "--metadata=lang:en",
            "--trace",
            "--template=%WORKSPACE_FOLDER%/latex/lib/template.html",
            "--resource-path=%WORKSPACE_FOLDER%/latex/lib:%WORKSPACE_FOLDER%/resources/imgs",
            "--listings=false",
            "--section-div=false",
            "--css=https://fonts.googleapis.com/css2?family=Roboto+Slab&Open-Sans",
            "--css=%WORKSPACE_FOLDER%/latex/lib/custom.css",
            "--shift-heading-level-by=1",
            "--standalone"
          ],
          "env": {
            "OUTDIR_DOCX": "%WORKSPACE_FOLDER%/build/docx/%DOCFILE%"
          }
        },
        {
          "name": "setup-outdir",
          "command": "mkdir",
          "args": [
            "-p",
            "%WORKSPACE_FOLDER%/build/html/res",
          ]
        },
        {
          "name": "copy-resources",
          "command": "cp",
          "args": [
            "-r",
            "%DIR%/res/svg",
            "%WORKSPACE_FOLDER%/build/html/res/svg"
          ]
        },
        {
          "name": "pandoc-docx",
          "command": "pandoc",
          "args": [
            "%DOCFILE%.tex",
            "-s",
            "--from=latex",
            "--to=docx",
            "--output=%WORKSPACE_FOLDER%/build/html/%DOCFILE%.docx",
            "--data-dir=%APPDATA%/pandoc",
            "--verbose",
            "--metadata=charset=utf-8",
            "--metadata=lang:en",
            "--trace",
            "--resource-path=.;./lib;latex/lib;%WORKSPACE_FOLDER%/resources/imgs",
            "--listings",
            "--section-div=false"
          ],
          "env": {
            "OUTDIR_DOCX": "%WORKSPACE_FOLDER%/build/docx/%DOCFILE%"
          }
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "Compile Pdf",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "Pandoc HTML",
            "tools": [
              "pandoc-html"
            ]
        },
        {
          "name": "Pandoc HTML with copy",
          "tools": [
            "setup-outdir",
            "pandoc-html",
            "copy-resources"
          ]
      },
        {
          "name": "Pandoc DOCX",
          "tools": [
            "pandoc-docx"
          ]
      }

    ],
    "latex-workshop.latex.recipe.default": "Compile Pdf"
}
